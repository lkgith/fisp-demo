    display: block;
    _float:left;
    height:40px;
}

.nav_main #navMainMenu {
    height:40px;
    _width: 555px;
    a {
        font-weight: normal;
        font-size: 14px;
        font-family: "Microsoft YaHei", "微软雅黑", "宋体", Arial, sans-serif;
        line-height: 45px;
    }
    a:hover {
        background-color: #3f466d;
    }
    a.current, a.current:hover {
        background-color: #3f466d;
    }

    span {
        padding: 0 8px 0 9px;
    }
    li.first span, li.first span {
        padding-right: 8px;
        padding-left: 9px;
    }
    li.logo {
        position: relative;
        width:107px;
        height: 40px;
        overflow: hidden;
        a{
            display: block;
            width: 87px;
            height: 27px;
            position: absolute;
            left:0;
            top:50%;
            margin-top: -14px;
            text-indent: -9999px;
            background:url(logo.png) 0 0 no-repeat;
            _background: 0;
            _filter: progid:DXImageTransform.Microsoft.AlphaImageLoader(src='logo.png');
        }

    }

}
    #navMainMenu{
        #btn_more {
            span {
                padding-right: 22px;
            }
        }
        .btn_more {
            position:relative;
            i {
                position: absolute;
                top: 20px;
                right: 9px;
                height: 0;
                overflow: hidden;
                border-style: solid;
                border-width: 4px;
                border-color: #FFF #393d54 #393d54;
                -webkit-transform-origin: 50% 25%;
                -webkit-transition: -webkit-transform .2s ease-in;
                transform-origin: 50% 25%;
                transition: trnasform .2s ease-in;
                cursor: pointer;
             }
            a#btn_more:hover, .btn_more_hover {
                background-color: #3f466d;
                i {
                    border-color: #FFF #3f466d #3f466d;
                    *top: 15px;
                    *right: 8px;
                    *border-width: 5px;
                    *border-color: #3f466d #3f466d #FFF;
                    -webkit-transform: rotate(180deg);
                    transform: rotate(180deg);
                }
            }
        }
        #box_more {
            display: none;
            background-color: #3f466d;
            position: absolute;
            top: 40px;
            left: 0;
            width: 170px;
            padding: 9px 4px;
            z-index:10000;
            li {
                margin-left: 0;
            }
            a {
                border-right: 0 none;
                line-height: 28px;
                span {
                    padding: 0 6px;
                }
                &:hover{
                    background:#3f466d;
                    color:#3083fd;
                }
            }
        }
    }
}

