// reset
.bdv-trace {
    p, ul, ol, dl {
        margin: 0;
        padding: 0;
    }

    ul, ol {
        list-style: none;
    }
}

// bdv-trace
.bdv-trace {
    float: left;
    height: 35px;
    position: relative;
    z-index: 110;

    // toggle
    .bdv-trace-toggle {
        color: #3471d1;
        float: left;
        font: 12px/27px "\5FAE\8F6F\96C5\9ED1",SimSun, tahoma, arial, sans-serif;
        margin-top: 5px;
        padding-right: 10px;
        position: relative;
        z-index: 2;

        &:link,
        &:hover,
        &:active,
        &:visited {
            text-decoration: none;
        }

        i {
            background: url(http://vs3.bdstatic.com/pc_static/open/record/icons.png) 0 -260px;
            _background-image: url(http://vs3.bdstatic.com/pc_static/open/record/ie_icons.png);
            curosr: pointer;
            height: 4px;
            overflow: hidden;
            position: absolute;
            right: 0;
            top: 11px;
            width: 7px;
        }
    }

    // icons
    .bdv-trace-icons {
        background: url(http://vs3.bdstatic.com/pc_static/bdv_trace/icons.png) no-repeat 0 0;
        overflow: hidden;
        position: absolute;
    }

